.header
  .header__upper
    .header__upper__title
      = link_to Cafelog, root_path
    .header__upper__nav
      .header__upper__nav__left
        = link_to "カテゴリ"
      .header__upper__nav__right
        %ul
          - if user_signed_in?
            %li
              ユーザー
              = current_user.nickname
              さん
            %li= link_to "ログアウト", destroy_user_session_path, method: :delete
          - elsif owner_signed_in?
            %li
              オーナー 
              = current_owner.name
              さん
            %li= link_to "ログアウト", destroy_owner_session_path, method: :delete
          - else
            %li ゲストユーザー
            %li= link_to "新規登録", new_user_registration_path
            %li= link_to "ログイン", new_user_session_path
