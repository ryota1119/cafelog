= render 'layouts/header'

.form
  .form__container
    .form__container__title
      ユーザーログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .input.new-content
        = f.label :email, 'メールアドレス', class: "input__title"
        = f.text_field :email, autofocus: true, autocomplete: "email", class: "input__form"
      .input.new-content
        = f.label :password, 'パスワード', class: "input__title"
        = f.password_field :password, autocomplete: "current-password", class: "input__form"
      - if devise_mapping.rememberable?
        .new-content
          = f.check_box :remember_me
          = f.label :remember_me
      .new-content.submit
        = f.submit "Log in", class: "submit-btn"
      = render "users/shared/links"

= render 'layouts/footer'
